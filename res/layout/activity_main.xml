<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <EditText
        android:id="@+id/address_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/get_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/address_field"
        android:layout_alignBottom="@+id/address_field"
        android:layout_alignParentRight="true"
        android:text="@string/get" />

    <EditText
        android:id="@+id/seconds_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/address_field"
        android:layout_below="@+id/address_field"
        android:layout_marginTop="29dp"
        android:ems="10" />

    <EditText
        android:id="@+id/minutes_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/seconds_field"
        android:layout_below="@+id/seconds_field"
        android:layout_marginTop="29dp"
        android:ems="10" />

    <EditText
        android:id="@+id/hours_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/minutes_field"
        android:layout_below="@+id/minutes_field"
        android:layout_marginTop="29dp"
        android:ems="10" />

    <EditText
        android:id="@+id/days_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/hours_field"
        android:layout_below="@+id/hours_field"
        android:layout_marginTop="29dp"
        android:ems="10" />

    <EditText
        android:id="@+id/years_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/days_field"
        android:layout_below="@+id/days_field"
        android:layout_marginTop="29dp"
        android:ems="10" />

</RelativeLayout>